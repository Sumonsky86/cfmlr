---
import Layout from '@layouts/Layout.astro';
---

<Layout title="Redirección – Política de Privacidad" description="Redirección a la Política de Privacidad">
  <meta name="robots" content="noindex, follow" />
  <meta http-equiv="refresh" content="0; url=/legal/privacy-policy" />
  <link rel="canonical" href="/legal/privacy-policy" />
  <main id="main-content" class="py-10">
    <section class="mx-auto max-w-3xl px-4 text-center">
      <h1 class="text-2xl font-bold">Redirigiendo a Política de Privacidad…</h1>
      <p class="mt-2 text-gray-600">
        Si no sos redirigido, hacé click
        <a class="text-primary underline" href="/legal/privacy-policy">aquí</a>.
      </p>
    </section>
  </main>
</Layout>
