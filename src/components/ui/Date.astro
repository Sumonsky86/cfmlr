---
interface Props {
    date: Date;
    class?: string;
}

const { date, class: className } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});
---

<time datetime={date.toISOString()} class:list={[className, "text-sm text-body-base"]}>
    {formattedDate}
</time>