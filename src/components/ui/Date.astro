---
interface Props {
    date: string | Date;
    class?: string;
}

const { date, class: className } = Astro.props as Props;

const parsedDate = new globalThis.Date(date);
const formattedDate = parsedDate.toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});
---

<time datetime={parsedDate.toISOString()} class:list={[className, "text-sm text-body-base"]}>
    {formattedDate}
</time>
