---
import { headerMenu } from '@data/menu';
import { siteConfig } from '@data/config';
import Logo from '@components/Logo.astro';
import { Menu, X, Phone, MapPin, MessageSquare } from 'lucide-astro';
import Button from '@components/ui/Button.astro';

  
const misEstudiosButton = {
    name: "Mis Estudios",
    link: "/mis-estudios/",
};

const turnosButton = {
    name: "Solicitar Turno",
    link: '/turnos',
};

const contactButton = {
    name: "Contacto",
    link: '/contact',
};

const currentPath = Astro.url.pathname;

const isCurrentPage = (link: string) => {
    if (link === '/') {
        return currentPath === '/';
    }
    return currentPath.startsWith(link);
};
---

<div class="fixed top-0 left-0 w-full z-50">
     
    <div class="hidden md:block bg-gray-100 text-gray-800 py-1 text-xs">
        <div class="site-container mx-auto px-4 flex justify-end items-center gap-4">
            <div class="flex items-center gap-2">
                <MapPin size={14} />
                <span>{siteConfig.Socials.Location}</span>
            </div>
            <div class="flex items-center gap-2">
                <a href={`https://wa.me/${siteConfig.Socials.Phone}`} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 hover:text-primary">
                    <MessageSquare size={14} />
                    <span>{siteConfig.Socials.Phone} (WhatsApp)</span>
                </a>
            </div>
            <div class="flex items-center gap-2">
                <a href={`tel:+54${siteConfig.Socials.Phone2}`} class="flex items-center gap-1 hover:text-primary">
                    <Phone size={14} />
                    <span>{siteConfig.Socials.Phone2} (Llamadas)</span>
                </a>
            </div>
        </div>
    </div>

    <header class="relative w-full">
        <div class="site-container mx-auto px-4 md:mt-2">
            <div class="flex justify-between items-center bg-white py-3 px-4 rounded-lg border-gray-200 border shadow-md">
                <Logo />
                <nav class="relative flex items-center gap-2 lg:gap-4" aria-label="Site Navigation">
                    {/* Menú de Escritorio */}
                    <ul class="hidden lg:flex lg:gap-4 items-center">
                        {
                            headerMenu.map((item) => (
                                <li>
                                    <a
                                        href={item.link}
                                        class:list={[
                                            'text-sm font-medium rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary',
                                            isCurrentPage(item.link)
                                                ? 'text-primary font-semibold'
                                                : 'text-gray-700 hover:text-primary',
                                        ]}
                                        aria-current={isCurrentPage(item.link) ? 'page' : undefined}
                                    >
                                        {item.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>

                    <div class="hidden lg:flex items-center gap-2">
                        <Button href={misEstudiosButton.link} variant="secondary" size="sm">{misEstudiosButton.name}</Button>
                        <Button href={turnosButton.link} variant="primary" size="sm">{turnosButton.name}</Button>
                        <Button href={contactButton.link} variant="secondary" size="sm">{contactButton.name}</Button>
                    </div>

                    {/* Botón Menú Móvil */}
                    <button
                        class="mobile-menu-button relative z-30 p-2 border-none cursor-pointer bg-transparent lg:hidden"
                        aria-label="Toggle Menu"
                        aria-expanded="false"
                    >
                        <span class="menu-icon block">
                            <Menu size={24} class="text-body-base" />
                        </span>
                        <span class="close-icon hidden">
                            <X size={24} class="text-white" />
                        </span>
                    </button>

                    {/* Panel Menú Móvil */}
                    <div
                        class="mobile-menu fixed inset-0 z-20 px-8 pt-20 bg-primary lg:hidden hidden opacity-0 scale-95 transform transition-all duration-200 ease-out overflow-y-auto"
                    >
                        <ul class="flex flex-col gap-4 text-lg">
                            {
                                headerMenu.map((item) => (
                                    <li>
                                        <a
                                            href={item.link}
                                            class:list={[
                                                'py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-white text-white hover:underline',
                                                isCurrentPage(item.link) && 'font-bold'
                                            ]}
                                            aria-current={isCurrentPage(item.link) ? 'page' : undefined}
                                        >
                                            {item.name}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>

                        <div class="mt-8 pb-8 flex flex-col gap-4">
                            <Button href={misEstudiosButton.link} variant="ghostLight" size="md">{misEstudiosButton.name}</Button>
                            <Button href={turnosButton.link} variant="ghostLight" size="md">{turnosButton.name}</Button>
                            <Button href={contactButton.link} variant="ghostLight" size="md">{contactButton.name}</Button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
</div>

<script>
     
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    mobileMenuButton?.addEventListener('click', () => {
        const isHidden = mobileMenu?.classList.contains('hidden');

        if (isHidden) {
            document.body.style.overflow = 'hidden';
            mobileMenu?.classList.remove('hidden');
            requestAnimationFrame(() => {
                mobileMenu?.classList.remove('opacity-0', 'scale-95');
                mobileMenu?.classList.add('opacity-100', 'scale-100');
            });
            menuIcon?.classList.add('hidden');
            closeIcon?.classList.remove('hidden');
        } else {
            document.body.style.overflow = '';
            mobileMenu?.classList.add('opacity-0', 'scale-95');
            mobileMenu?.classList.remove('opacity-100', 'scale-100');
            setTimeout(() => {
                mobileMenu?.classList.add('hidden');
            }, 200);
            menuIcon?.classList.remove('hidden');
            closeIcon?.classList.add('hidden');
        }
    });
</script>
