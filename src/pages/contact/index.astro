---
import Layout from "@layouts/Layout.astro"
import InnerHero from "@components/sections/InnerHero.astro"
import ContactInfo from "@components/sections/ContactInfo.astro"
import heroImage from "../../assets/images/blog-hero-2.jpg";

const heroContent = {
    title: "Contacto",
    description: "Contactá a Cefem en Las Rosas para turnos o consultas. Nuestro equipo está listo para atenderte.",
    imageAlt: "Mapa de la ubicación de la clínica Cefem en Las Rosas",
    backgroundImage: heroImage,
    overlayOpacity: 0.2 
}
---

<Layout title="Contacto y Ubicación | Cefem" description="Encontranos en Boulevard Kemmis 843, Las Rosas. Solicitá tu turno por WhatsApp o llamanos. Estamos para ayudarte con tu salud.">
    <InnerHero content={heroContent} />
    <ContactInfo background="base" padding="base" />
</Layout>