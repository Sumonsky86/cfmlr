---
import Layout from "@layouts/Layout.astro";
import InnerHero from "@components/sections/InnerHero.astro";
import TurnosForm from "@components/TurnosForm.astro";
import heroImage from "../../assets/images/blog-hero-2.jpg";


const heroContent = {
    title: "Solicitá tu Turno en Cefem",
    description: "Especialidades: pediatría, urología, ecografías, ginecología, clínica médica y más. Atención personalizada en Las Rosas.",
    imageAlt: "Formulario de turnos online en Cefem",
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}
---

<Layout 
    title="Solicitar Turno Online | Cefem Las Rosas" 
    description="Solicitá tu turno en Cefem Las Rosas. Especialidades: pediatría, urología, ecografías, ginecología, y más. Atención personalizada."
>
    <InnerHero content={heroContent} />
    <section class="py-12 md:py-20">
        <div class="site-container mx-auto px-4">
            <TurnosForm />
        </div>
    </section>
</Layout>
